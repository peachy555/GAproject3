<h1>Create new highlighter</h1>
<% binding.pry %>
<%= form_for @highlighter do |f| %>
  <%= f.hidden_field :project_id, value: @project_id %>
  <%# hidden_field_tag 'project_id', params[:project_id] %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :color %>
    <%= f.color_field(:highlighter, :color) %>
  </p>
  <p>
    <%= f.label :backgroundColor %>
    <%= f.color_field(:highlighter, :backgroundColor) %>
  </p>
  <%= submit_tag "Go", class: "ui button primary" %>
<% end %>
